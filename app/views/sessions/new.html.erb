<!-- app/views/sessions/new.html.erb -->
<h1>Login</h1>
<%= form_with(url: sessions_path, method: :post) do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit "Login" %>
  </div>
<% end %>

<%= link_to "Register", new_user_path %>
