<!-- app/views/patients/index.html.erb -->
<h1>Patients</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.age %></td>
        <td><%= patient.gender %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td>
          <%= link_to 'Destroy', patient_path(patient), method: :delete, data: { confirm: 'Are you sure you want to delete this patient?' } %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Patient', new_patient_path %>
